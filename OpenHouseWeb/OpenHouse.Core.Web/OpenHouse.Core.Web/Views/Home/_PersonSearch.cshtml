@model List<OpenHouse.Model.Core.Model.vwperson>

<div class="table-responsive">
    <table class="table table-sm table-bordered table-hover">
        <thead>
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Title</th>
                <th>Full Name</th>
                <th class="text-center">Date of Birth</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
            <tr>
                <td class="text-center">
                    @person.personId
                </td>
                <td class="text-center">
                    @person.title
                </td>
                <td>
                    @person.fullName
                </td>
                <td class="text-center">
                    @person.dateOfBirth.Value.ToString("dd/MM/yyyy")
                </td>
                @if (ViewBag.DisplayType == "selector")
                {
                    <td class="text-center">
                        <a class="btn btn-light" onclick="selectPerson(@person.personId, '@person.fullName');">Select</a>
                    </td>

                }
                else
                {
                    <td class="text-center">
                        <a class="btn btn-light" onauxclick="window.open('@Url.Action("Details", "Persons", new { @id = person.personId })');" onclick="window.open('@Url.Action("Details", "Persons", new { @id = person.personId })');">View</a>
                    </td>
                }
            </tr>
            }
        </tbody>
    </table>
</div>