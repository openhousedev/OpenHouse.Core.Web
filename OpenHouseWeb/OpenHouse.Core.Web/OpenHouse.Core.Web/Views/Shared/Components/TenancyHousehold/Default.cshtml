<div id="modalTenancyHouseholdCreate" class="modal fade" aria-hidden="true" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-users"></i>&nbsp;Tenancy Household</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <label class="control-label">Select Person</label>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <input type="text" readonly="readonly" id="selectedHouseholdPersonId" class="form-control" />
                    </div>
                    <div class="form-group col-md-10">
                        <div class="input-group">
                            @*Person Search input*@
                            <input type="text" readonly="readonly" class="form-control" id="selectedHouseholdPersonDisplay" />
                            <div class="input-group-append">
                                <a class="btn btn-light btn-sm rounded-right" onclick="openPersonSeach('#selectedHouseholdPersonId', '#selectedHouseholdPersonDisplay');">Select</a>
                            </div>
                            <span id="householdPersonValidation" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Lead Tenant Relationship</label>
                    <select class="form-control" id="selLeadTenantRelationship" asp-items="ViewBag.LeadTenantRelationshipId"></select>
                </div>
                <div class="form-group">
                    <label class="control-label">Joint Tenant Relationship</label>
                    <select class="form-control" id="selJointTenantRelationship" asp-items="ViewBag.JointTenantRelationshipId"></select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="processTenancyHousehold()" data-dismiss="modal">Save</button>
                <button type="button" class="btn btn-secondary" onclick="clearTenancyHouseholdModal();" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div id="modalTenancyHouseholdDelete" class="modal fade" aria-hidden="true" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-users"></i>&nbsp;Tenancy Household</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    Are you sure you want to remove tenancy household member?
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="confirmDeleteTenancyHousehold()" data-dismiss="modal">Delete</button>
                <button type="button" class="btn btn-secondary"  data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
