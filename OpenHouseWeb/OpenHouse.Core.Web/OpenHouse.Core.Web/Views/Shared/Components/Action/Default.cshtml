<!--Create/Edit Action Modal-->
<div id="modalActionCreate" class="modal fade" aria-hidden="true" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-tasks"></i>&nbsp;Action</h5>
                <button type="button" class="close" onclick="clearActionModal();" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <input type="hidden" readonly="readonly" id="selectedUserId" class="form-control" />
                    <div class="form-group col-md-12">
                        <label class="control-label">Select Assignee</label>
                        <div class="input-group">
                            @*Property Search input*@
                            <input type="text" readonly="readonly" class="form-control" id="selectedUserDisplay" />
                            <div class="input-group-append">
                                <a class="btn btn-light btn-sm rounded-right" onclick="openUserSeach('#selectedUserId', '#selectedUserDisplay');">Select</a>
                            </div>
                            <span id="actionUserIdValidationResult" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="txtActionDueDate" class="control-label">Due Date</label>
                    <input type="date" id="txtActionDueDate" class="form-control" />
                    <span id="actionDueDateValidationResult" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">ActionType</label>
                    <select class="form-control" id="selActionType" asp-items="ViewBag.actionTypeId"></select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnProcessAction" class="btn btn-primary" onclick="processAction();" data-dismiss="modal">Save</button>
                <button type="button" id="btnCancelAction" class="btn btn-secondary" onclick="clearActionModal();" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>