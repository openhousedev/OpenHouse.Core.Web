<div id="modalPropertyChargeCreate" class="modal fade" aria-hidden="true" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-file-invoice"></i>&nbsp;Property Charge</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label">Rent Account</label>
                            <select class="form-control" id="selRentAccountId" asp-items="ViewBag.RentAccountId"></select>
                        </div>
                        <div class="form-gorup">
                            <label for="txtPropertyChargeValue" class="control-label">Weekly Charge Amount:</label>
                            <input id="txtPropertyChargeValue" type="number" step="0.01" class="form-control" value="0.0" />
                            <span id="txtPropertyChargeValidationResult" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="txtPropertyChargeStartDate" class="control-label">Start Date</label>
                            <input type="date" id="txtPropertyChargeStartDate" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                            <span id="txtPropertyChargeStartDateValidationResult" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="txtPropertyChargeEndDate" class="control-label">End Date</label>
                            <input type="date" id="txtPropertyChargeEndDate" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="processPropertyCharge()" data-dismiss="modal">Save</button>
                <button type="button" class="btn btn-secondary" onclick="clearPropertyChargeModal();" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
