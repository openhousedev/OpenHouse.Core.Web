@model OpenHouse.Model.Core.Model.PropertyViewModel

@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create">
    <div class="row">
        <div class="col-md-6">
            <h4>Create Property</h4>
        </div>
        <div class="col-md-6">
            <input type="button" class="btn btn-outline-primary float-right ml-1" onClick="window.open('', '_self').close();" value="Cancel" />
            <input type="submit" class="btn btn-outline-primary float-right ml-1" value="Create" />
        </div>
    </div>
    <hr />
    <div class="row mt-4">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="propertyClassId" class="control-label"></label>
                <select asp-for="propertyClassId" class="form-control" asp-items="ViewBag.propertyClassId"></select>
            </div>
            <div class="form-group">
                <label asp-for="propertyTypeId" class="control-label"></label>
                <select asp-for="propertyTypeId" class="form-control" asp-items="ViewBag.propertyTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="propertyNum" class="control-label"></label>
                <input asp-for="propertyNum" class="form-control" />
                <span asp-validation-for="propertyNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="propertySubNum" class="control-label"></label>
                <input asp-for="propertySubNum" class="form-control" />
                <span asp-validation-for="propertySubNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="address1" class="control-label"></label>
                <input asp-for="address1" class="form-control" />
                <span asp-validation-for="address1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="address2" class="control-label"></label>
                <input asp-for="address2" class="form-control" />
                <span asp-validation-for="address2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="address3" class="control-label"></label>
                <input asp-for="address3" class="form-control" />
                <span asp-validation-for="address3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="address4" class="control-label"></label>
                <input asp-for="address4" class="form-control" />
                <span asp-validation-for="address4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="postCode" class="control-label"></label>
                <input asp-for="postCode" class="form-control" />
                <span asp-validation-for="postCode" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="demolitionDate" class="control-label"></label>
                <input asp-for="demolitionDate" class="form-control" />
                <span asp-validation-for="demolitionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="livingRoomQty" class="control-label"></label>
                <input asp-for="livingRoomQty" class="form-control" />
                <span asp-validation-for="livingRoomQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="singleBedroomQty" class="control-label"></label>
                <input asp-for="singleBedroomQty" class="form-control" />
                <span asp-validation-for="singleBedroomQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="doubleBedroomQty" class="control-label"></label>
                <input asp-for="doubleBedroomQty" class="form-control" />
                <span asp-validation-for="doubleBedroomQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="maxOccupants" class="control-label"></label>
                <input asp-for="maxOccupants" class="form-control" />
                <span asp-validation-for="maxOccupants" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
